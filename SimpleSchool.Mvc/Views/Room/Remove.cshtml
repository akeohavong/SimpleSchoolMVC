@model SimpleSchool.Core.Entities.Room

<h1>Remove Room</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <form asp-controller="Room" asp-action="Remove" asp-route-id="@Model.RoomID" method="post">
            <p>Would you like to delete room @Model.RoomNumber?</p>
            <input type="hidden" asp-for="RoomID">
            <input type="hidden" asp-for="BuildingID">
            <button class="btn btn-danger">Delete</button>
            <a asp-action="GetRooms" asp-route-id=@Model.BuildingID  asp-controller="Building">Go Back</a>
        </form>
    </div>
</div>
