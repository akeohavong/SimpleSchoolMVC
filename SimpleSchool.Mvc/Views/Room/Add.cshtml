@model SimpleSchool.Core.Entities.Room

<h1>Add New Room</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <form asp-controller="Room" asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="BuildingID" class="form-label">BuildingID</label>
                <input type="text" class="form-control" id="BuildingID" asp-for="BuildingID">
            </div>
            <div class="mb-3">
                <label asp-for="RoomNumber" class="form-label">Number</label>
                <input type="text" class="form-control" id="RoomNumber" asp-for="RoomNumber">
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input type="text" class="form-control" id="Description" asp-for="Description">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>