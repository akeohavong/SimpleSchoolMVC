@model SimpleSchool.Core.Entities.Building

<h1>Add New Building</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <form asp-controller="Building" asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="BuildingName" class="form-label">Name</label>
                <input type="text" class="form-control" id="BuildingName" asp-for="BuildingName">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>