@model SimpleSchool.Core.Entities.Building

<h1>Remove Building</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4">
        <form asp-controller="Building" asp-action="Remove" asp-route-id="@Model.BuildingID" method="post">
            <p>Would you like to delete the @Model.BuildingName?</p>
            <input type="hidden" asp-for="BuildingID" />
            <button class="btn btn-danger">Delete</button>
            <a asp-action="List" asp-controller="Building">Go Back</a>
        </form>
    </div>
</div>
